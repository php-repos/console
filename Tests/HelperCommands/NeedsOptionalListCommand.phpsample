<?php

use PhpRepos\Console\Business\Attributes\Description;
use PhpRepos\Console\Business\Attributes\LongOption;
use PhpRepos\Console\Business\Attributes\ShortOption;
use function PhpRepos\Console\Infra\CLI\line;

return function (
    #[LongOption('list')]
    #[ShortOption('l')]
    #[Description('The list array option')]
    ?array $list = null) {
    $value = $list === null ? 'null' : implode(' and ', $list);
    line("These are passed list: " . $value);
};
