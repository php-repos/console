<?php

use PhpRepos\Console\Business\Attributes\LongOption;
use PhpRepos\Console\Business\Attributes\ShortOption;
use function PhpRepos\Console\Infra\CLI\line;

return function (
    #[ShortOption('h')]
    bool $h,
    #[LongOption('help')]
    bool $help
) {
    $h = $h ? 'true' : 'false';
    $help = $help ? 'true' : 'false';
    line("h is $h and help is $help");
};
