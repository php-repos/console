<?php

use PhpRepos\Console\Business\Attributes\Description;
use PhpRepos\Console\Business\Attributes\LongOption;
use PhpRepos\Console\Business\Attributes\ShortOption;
use function PhpRepos\Console\Infra\CLI\line;

return function (
    #[LongOption('email')]
    #[Description('The email option for the command')]
    string $email,
    #[LongOption('username')]
    #[ShortOption('u')]
    #[Description('The username option for the command')]
    ?string $username = null
) {
    $username = $username ?: 'default';
    line("This is the given email option: $email and the given username is $username");
};
