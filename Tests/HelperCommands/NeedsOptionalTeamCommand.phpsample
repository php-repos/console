<?php

use PhpRepos\Console\Business\Attributes\Description;
use PhpRepos\Console\Business\Attributes\ShortOption;
use function PhpRepos\Console\Infra\CLI\line;

return function (
    #[ShortOption('t')]
    #[Description('The team option for the command')]
    ?string $team = null
) {
    $team = $team ?: 'default-team';
    line("This is the given team option: " . $team);
};
